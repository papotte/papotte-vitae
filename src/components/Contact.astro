---
import Icon from 'astro-icon';

const accessToken = import.meta.env.WEB3FORMS_ACCESS_TOKEN;
---

<section id="contact">
	<div class="text-center flex-col gap-x-4 gap-y-8 lg:gap-y-16">
		<h1 class="text-4xl font-extrabold tracking-tight leading-none text-justify md:text-5xl lg:text-6xl">
			Get in touch
		</h1>
		<div class="flex flex-col md:flex-row gap-8 justify-between w-full">
			<form
				action="https://api.web3forms.com/submit"
				method="POST"
				class="flex flex-col text-text gap-6 w-2/3 text-left mx-auto"
			>
				<input type="hidden" name="access_key" value={accessToken} />
				<div>
					<label for="name" class="block mb-2 text-sm font-medium"> Your name</label>
					<div class="relative">
						<div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none text-accent">
							<Icon name="mdi:account" class="w-4 h-4" />
						</div>
						<input
							type="text"
							id="name"
							name="name"
							class="bg-white border border-primary-600 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2.5"
							placeholder="Your full name"
							required
						/>
					</div>
				</div>
				<div>
					<label for="email-address-icon" class="block mb-2 text-sm font-medium"> Your Email</label>
					<div class="relative">
						<div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none text-accent">
							<Icon name="mdi:at" class="w-4 h-4" />
						</div>
						<input
							type="email"
							name="email"
							required
							id="email-address-icon"
							class="bg-white border border-primary-600 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2.5"
							placeholder="name@email.com"
						/>
					</div>
				</div>
				<div>
					<label for="message" class="block mb-2 text-sm font-medium">Your message</label>

					<div class="relative">
						<div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none text-accent">
							<Icon name="mdi:message-processing" class="w-4 h-4" />
						</div>
						<textarea
							id="message"
							name="message"
							rows="4"
							required
							class="bg-white border border-primary-600 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2.5"
							placeholder="Leave a message..."></textarea>
					</div>
				</div>

				<div class="h-captcha self-center md:self-start" data-captcha="true"></div>
				<div class="flex items-start mb-6">
					<button type="submit" class="button-primary font-medium text-sm w-full sm:w-auto"> Submit</button>
				</div>
			</form>

			<div class="border-primary self-center w-48 md:w-96">
				<img src="mention.svg" alt="Person holding a phone" class="object-cover w-full h-full" />
			</div>
		</div>
	</div>
</section>

<script src="https://web3forms.com/client/script.js" async defer></script>
