---
import { name, website } from '@content';

const pages = [
	{
		title: 'About',
		href: '#about',
	},
	{
		title: 'Skills',
		href: '#skills',
	},
	{
		title: 'Experience',
		href: '#experience',
	},
	{
		title: 'Contact',
		href: '#contact',
	},
];
---

<nav class="bg-background">
	<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
		<a href={website} class="flex items-center">
			<span class="self-center text-3xl font-semibold whitespace-nowrap">{name}</span>
		</a>
		<button
			data-collapse-toggle="navbar-default"
			type="button"
			class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-primary rounded-lg md:hidden hover:bg-accent hover:text-white focus:outline-none focus:ring-2 focus:ring-accent"
			aria-controls="navbar-default"
			aria-expanded="false"
		>
			<span class="sr-only">Open main menu</span>
			<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M1 1h15M1 7h15M1 13h15"></path>
			</svg>
		</button>
		<div class="hidden w-full md:block md:w-auto" id="navbar-default">
			<ul
				class="font-light text-end flex flex-col p-4 ml-auto w-min md:p-0 mt-4 rounded-lg drop-shadow-md bg-accent md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-transparent md:drop-shadow-none"
			>
				{
					pages.map((page) => (
						<li>
							<a
								href={page.href}
								class="block py-2 pl-3 pr-4 text-white md:text-text  md:bg-transparent md:p-0 hover:text-primary"
								aria-current="page"
							>
								{page.title}
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</nav>
