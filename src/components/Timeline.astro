---
import { JobExperience } from '@/model';
import TimelineItem from 'src/components/TimelineItem.astro';
const { value } = Astro.props;
const currentYear = new Date().getFullYear();
---

<section id="experience">
	<div class="text-center flex-col gap-x-4 gap-y-8 lg:gap-y-16">
		<h1 class="text-4xl font-extrabold tracking-tight leading-none text-justify md:text-5xl lg:text-6xl">
			Work Experience
		</h1>
		<div class="flex flex-col md:flex-row gap-8 justify-between">
			<ol class="flex flex-col w-full md:w-2/3">
				<li class="py-1 px-2 bg-tertiary text-white rounded-md w-fit self-center">
					{currentYear}
				</li>
				{
					value.map((item: JobExperience) => (
						<TimelineItem
							title={item.position}
							subtitle={item.company}
							time={item.start}
							description={item.description}
							labels={item.tags}
						/>
					))
				}
			</ol>
			<div class="border-primary self-center w-48 md:w-96">
				<img src="world-view.svg" alt="Person over the world" class="object-cover w-full h-full" />
			</div>
		</div>
	</div>
</section>
